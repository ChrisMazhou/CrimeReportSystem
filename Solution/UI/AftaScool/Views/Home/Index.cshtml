@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="AngularApp" ng-controller="HomeController">
<head>
    <base href="~/">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/AngularApp")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" ng-click="navbarProperties.isCollapsed = !navbarProperties.isCollapsed">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">AftaScool</a>
            </div>
            <div class="navbar-collapse collapse" collapse="navbarProperties.isCollapsed">
                <ul class="nav navbar-nav" ng-show="currentUser.loggedIn">
                    <li><a href="/#/SchoolMaintenance">School Maintenance</a></li>
                    <li><a href="/#">Route Three</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right" ng-show="!currentUser.loggedIn">
                    <li><a href="/#/login">Login</a></li>
                    <li><a href="/#/register">Register</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right" ng-show="currentUser.loggedIn">
                    <li><a href="/#/myProfile">Welcome {{currentUser.displayName}}</a></li>
                </ul>
            </div>
        </div>
    </div>



    <div class="container mainContent">
        <br />
        <div ng-view>

        </div>
    </div>

</body>
</html>

